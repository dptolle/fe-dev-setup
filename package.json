{
	"name": "fe-dev-setup",
	"version": "1.0.0",
	"description": "Setup for Frontend projects",
	"main": "./dist/index.html",
	"scripts": {
		"prepare": "husky install",
		"lint": "npx eslint ./src --ext .js,.jsx,.ts,.tsx",
		"lint:fix": "npx eslint --fix ./src --ext .js,.jsx,.ts,.tsx",
		"build": "npx webpack --config ./config/webpack.config.js",
		"clean": "npx rimraf dist",
		"format": "npx prettier  --ignore-path ./config/.prettierignore --write .",
		"prebuild": "npm run clean",
		"serve": "npx webpack serve --hot --config ./config/webpack.config.js",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"author": "dptolle",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/dptolle/fe-dev-setup.git"
	  },
	"dependencies": {
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	},
	"devDependencies": {
		"@types/react": "^17.0.35",
		"@types/react-dom": "^17.0.11",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"eslint": "^7.2.0",
		"eslint-config-airbnb-typescript": "^8.0.2",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.21.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-prettier": "^3.1.3",
		"eslint-plugin-react": "^7.27.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"html-webpack-plugin": "^5.5.0",
		"husky": "^7.0.4",
		"prettier": "^2.4.1",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.2.6",
		"typescript": "^4.4.4",
		"webpack": "^5.64.1",
		"webpack-cli": "^4.9.1",
		"webpack-dev-server": "^4.5.0"
	},
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint",
			"react",
			"prettier"
		],
		"extends": [
			"airbnb-typescript",
			"plugin:@typescript-eslint/recommended",
			"prettier",
			"prettier/react",
			"prettier/@typescript-eslint",
			"plugin:react/recommended"
		],
		"parserOptions": {
			"project": "./config/tsconfig.json",
			"ecmaFeatures": {
				"jsx": true
			}
		},
		"settings": {
			"react": {
				"version": "detect"
			}
		},
		"env": {
			"node": true,
			"browser": true,
			"jest": true
		},
		"rules": {
			"prettier/prettier": [
				"error"
			],
			"no-prototype-builtins": "off",
			"import/prefer-default-export": "off",
			"import/no-default-export": "error",
			"react/destructuring-rootassignment": "off",
			"react/jsx-filename-extension": "off",
			"@typescript-eslint/explicit-function-return-type": [
				"error",
				{
					"allowExpressions": true,
					"allowTypedFunctionExpressions": true
				}
			],
			"@typescript-eslint/no-use-before-define": [
				"error",
				{
					"functions": false,
					"classes": true,
					"variables": true,
					"typedefs": true
				}
			],
			"@typescript-eslint/no-explicit-any": 2
		}
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"printWidth": 120,
		"arrowParens": "always",
		"jsxSingleQuote": true
	}
}
